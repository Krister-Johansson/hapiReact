{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "inlineSources": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client"
  ],
  "compileOnSave": false
}